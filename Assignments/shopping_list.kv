BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'


        BoxLayout:
            id: leftlist
            orientation: 'vertical'

            Button:
                text: 'List Required'

            Button:
                text: 'List Completed'

            Button:
                text: 'Add New Item'

            Label:
                text: 'Name'
                height: '20dp'

            TextInput:
                id: new_item_name
                value: ''
                multiline: False
                write_tab: False
                height: '20dp'

            Label:
                text: 'Price'
                height: '20dp'

            TextInput:
                id: enter_item_price
                value: ''
                multiline: False
                write_tab: False
                height: '20dp'

            Label:
                text: 'Priority'
                height: '20dp'

            TextInput:
                id: enter_priority
                value: ''
                multiline: False
                write_tab: False
                height: '20dp'

            Button:
                id:list_add_item
                text: 'Add item'
                on_release: app.save_item(new_item_name.text, enter_item_price.text, enter_priority.text)

            Button:
                id: clear_input
                text: 'Clear'
                on_release: app.clear_input()

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation:'horizontal'
            BoxLayout:
                id: action
                Label:
                    id:total_price
                    size_hint_y: 0.1
                Button:
                    id: list_item
                    text: 'List Items'
                    on_release: app.list_required()
                Button:
                    id: list_completed
                    text: 'List Completed Items'
                    on_release: app.list_completed()
                Button:
                    id: mark_completed
                    text: 'Select an item to mark as completed'
            GridLayout:
                id: item_list
                cols: 1
                orientation: 'horizontal'
        Label:
            id: status_text
            text: app.status_text











